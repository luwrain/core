<project name="luwrain" default="jar" basedir=".">
  <path id="classpath">
    <pathelement location="."/>
    <fileset dir="lib">
      <include name="**/*.jar"/>
    </fileset>
  </path>
  <path id="mainjar">
    <pathelement location="."/>
    <fileset dir="jar">
      <include name="**/*.jar"/>
    </fileset>
  </path>
  <target name="clean">
    <delete dir="build"/>
    <delete dir="jar"/>
  </target>
  <target name="compile" depends="clean">
    <mkdir dir="build"/>
    <mkdir dir="build/main"/>
    <javac srcdir="src/main/java" destdir="build/main" encoding="UTF-8" source="1.7" target="1.7">
      <classpath refid="classpath"/>
    </javac>
  </target>
  <target name="jar" depends="compile">
    <mkdir dir="jar"/>
    <jar jarfile="jar/luwrain.jar">
      <manifest>
        <attribute name="Main-Class" value="org.luwrain.core.Init"/>
        <section name="org/luwrain">
          <attribute name="Extensions" value="org.luwrain.langs.ru.Extension"/>
        </section>
      </manifest>
      <fileset dir="./build/main">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="./src/main/resources">
        <include name="**/*.properties"/>
      </fileset>
    </jar>
  </target>
  <target name="compile-tests" depends="jar">
    <mkdir dir="build"/>
    <mkdir dir="build/tests"/>
    <javac srcdir="src/tests/java" destdir="build/tests" encoding="UTF-8" source="1.7" target="1.7">
      <classpath>
        <path refid="classpath"/>
        <path refid="mainjar"/>
      </classpath>
    </javac>
  </target>
  <target name="jar-tests" depends="compile-tests">
    <jar jarfile="jar/luwrain-tests.jar">
      <fileset dir="./build/tests">
        <include name="**/*.class"/>
      </fileset>
    </jar>
  </target>
  <target name="javadoc">
    <mkdir dir="api"/>
    <javadoc classpathref="classpath" destdir="api" defaultexcludes="yes" author="false" version="true" use="true" windowtitle="Accessible environment Luwrain" private="false">
      <fileset dir="java">
        <include name="**/*.java"/>
      </fileset>
      <doctitle><![CDATA[<h1>Accessible environment Luwrain</h1>]]></doctitle>
      <bottom><![CDATA[<i>Visit <a href="http://luwrain.org">luwrain.org</a> for more information</i>]]></bottom>
    </javadoc>
  </target>
  <target name="junit" depends="jar-tests">
    <junit printsummary="yes">
      <classpath>
        <path refid="classpath"/>
        <path refid="mainjar"/>
      </classpath>
      <formatter type="plain" usefile="false" />
      <batchtest fork="yes">
        <fileset dir="build/tests">
          <include name="**/*Test.class"/>
        </fileset>
      </batchtest>
    </junit>
  </target>
</project>
